<ul class="nav">
    <!-- Loop through the navigation items -->
    {{#foreach navigation}}
    <li class="nav-{{slug}}{{#if current}} nav-current{{/if}}"><a href="{{url absolute=" true"}}">{{label}}</a></li>
    {{/foreach}}

    <!-- for the mobile version of the navbar -->
    {{#get "tags" limit="all" include="count.posts" order="count.posts desc" as |tags|}}
    {{#foreach tags}}
    <li class="nav-{{slug}}{{#if current}} nav-current{{/if}} hide-desktop"><a href="{{url absolute=" true"}}">{{name}}</a></li>
    {{/foreach}}
    {{/get}}
    <!-- End the loop -->
</ul>